{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "declaration": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@bindle/*": ["./packages/*/src"]
    },
    "outDir": "dist"
  },
  
  "include": ["packages/**/*"],
  "exclude": ["**/eslint.config.ts/**", "**/eslint.config.js/**", "**/node_modules/**"]
}